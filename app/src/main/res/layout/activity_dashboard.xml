<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rashid.bharadwaj.party.DashboardActivity">


    
    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        mapbox:mapbox_cameraTargetLat="40.73581"
        mapbox:mapbox_cameraTargetLng="-73.99155"
        mapbox:mapbox_styleUrl="mapbox://styles/mapbox/streets-v10"
        mapbox:mapbox_cameraZoom="11"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignBottom="@+id/mapView"
        android:textColor="#ecf0f1"
        android:text="More Options"
        android:textAlignment="center"
        android:id="@+id/hostPartyButton"
        android:textStyle="bold"
        android:background="#FFA500"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:background="#78000000"
        android:id="@+id/tintedBG"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/extendedLayout"
        android:layout_above="@+id/hostPartyButton"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="#ecf0f1"
            android:text="Host Party"
            android:textAlignment="center"
            android:id="@+id/demo"
            android:textStyle="bold"
            android:background="#1abc9c"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="#ecf0f1"
            android:text="Contacts"
            android:textAlignment="center"
            android:id="@+id/demo1"
            android:textStyle="bold"
            android:background="#2ecc71"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="#ecf0f1"
            android:text="Credit Card"
            android:textAlignment="center"
            android:id="@+id/demo2"
            android:textStyle="bold"
            android:background="#e74c3c"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="#ecf0f1"
            android:text="Sign Out"
            android:textAlignment="center"
            android:id="@+id/demo3"
            android:textStyle="bold"
            android:background="#9b59b6"/>

    </LinearLayout>


</RelativeLayout>
